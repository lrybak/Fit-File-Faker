# Gitlint configuration for conventional commits
# See: https://www.conventionalcommits.org/

[general]
# Enable conventional commits rule
contrib=contrib-title-conventional-commits

# Ignore rules
# B6 = body-is-missing (allow commits without body)
# CC1 = body-requires-signed-off-by (we don't require sign-offs)
ignore=B6,CC1

[title-max-length]
line-length=100

[contrib-title-conventional-commits]
# Specify allowed commit types
types=build,chore,ci,docs,feat,fix,perf,refactor,revert,style,test,plan
